@model CAPA.Models.Capa

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title">Create New CAPA</h4>
        <ol class="breadcrumb">
            <li>
                <a href="">Home</a>
            </li>
            <li>
                <a href="Index">CAPA</a>
            </li>
            <li class="active">
                Create New CAPA
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <form method="post" asp-action="Create" id="formID">
                <div class="border p-3">
                    <div class="form-group"> 
                        <a asp-action="Index" class="btn btn-warning waves-effect waves-light w-xs">
                            <span class="btn-label">
                                <i class="fa fa-arrow-left"></i>
                            </span>Back
                        </a>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group row">
                                <div class="col-9">
                                    <label asp-for="source">Sumber</label>
                                    <textarea asp-for="source" class="form-control"></textarea>
                                    <span asp-validation-for="source" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-9">
                                    <label asp-for="problem">Masalah</label>
                                    <textarea asp-for="problem" class="form-control"></textarea>
                                    <span asp-validation-for="problem" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-9">
                                    <label asp-for="id_admin">Ditujukan Kepada Admin</label>
                                    <select asp-for="id_admin" id="id_admin" class="form-control" asp-items="ViewBag.IDAdmin">
                                        >
                                        <option value="">Please Select</option>
                                    </select>
                                    <span asp-validation-for="id_admin" class="text-danger"></span>
                                </div>
                            </div>

                            <!--<div class="form-group row">
        <div class="col-9">
            <label asp-for="id_category">Kategori</label>
            <select asp-for="id_category" id="id_category" class="form-control" asp-items="ViewBag.IDCategory">
                >
                <option value="0">Please Select</option>
            </select>
        </div>
    </div>-->

                            <div class="form-group row">
                                <div class="col-9">
                                    <label asp-for="is_proper">Catatan (Opsional dan akan disimpan di log pesan)</label>
                                    <textarea asp-for="is_proper" class="form-control"></textarea>
                                </div>
                            </div>
                            <!--<div class="form-group row">
                                <div class="col-9">
                                    <label asp-for="status">Status</label>
                                    <textarea asp-for="status" class="form-control"></textarea>
                                </div>
                            </div>-->

                            <div class="form-group">
                                <div class="col-sm-offset-5 col-sm-2 m-t-15">
                                    <button type="submit" class="btn btn-primary w-lg" value="create">
                                        Submit
                                    </button>
                                </div>
                            </div>

                        </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>

    @section tambahan_js{
    @{
            <partial name="_ValidationScriptsPartial" /> }
    }
