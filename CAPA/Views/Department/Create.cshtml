@model CAPA.Models.Department

<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <form method="post" asp-action="Create">
                <div class="row">
                    <div class="form-group row">
                        <div class="col-md-1">
                            <a asp-action="Index" class="form-control btn btn-warning"><i class="fa fa-arrow-left"></i> Back</a>
                        </div>
                    </div>

                    <label asp-for="department_name"></label>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <input asp-for="department_name" class="form-control" />
                            <span asp-validation-for="department_name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-1 col-md-offset-4">
                            <input type="submit" class="form-control btn btn-primary btn-block" value="Create" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section tambahan_js{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

