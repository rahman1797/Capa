@model CAPA.Models.Employee

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title">Update Employee</h4>
        <ol class="breadcrumb">
            <li>
                <a href="/Home">Home</a>
            </li>
            <li>
                <a href="/Employee">Employee</a>
            </li>
            <li class="active">
                Update Employee
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Update" class="form-horizontal" role="form" method="post">
                        <input asp-for="id" hidden />
                        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                        <div class="form-group">
                            <a asp-action="Index" class="btn btn-warning waves-effect waves-light w-xs">
                                <span class="btn-label">
                                    <i class="fa fa-arrow-left"></i>
                                </span>Back
                            </a>
                        </div>
                        <div class="form-group">
                            <label>Display Name</label>
                            <input asp-for="display_name" class="form-control">
                            <span asp-validation-for="display_name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="email" class="form-control">
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>
                        <div>
                            <label>Active</label>
                            <input onclick="checkCheckBox()" type="checkbox" id="vCheckBox" @ViewBag.is_checked>
                            <input asp-for="is_active" class="hidden" value=0 id="id_checkbox">
                        </div>
                        <div class="form-group">
                            @Html.HiddenFor(e => e.created_at)
                        </div>
                        <div class="form-group">
                            @Html.HiddenFor(e => e.updated_by)
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-5 col-sm-5 m-t-15">
                                <button type="submit" class="btn btn-primary w-xs" value="Create">
                                    Update
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@section tambahan_js{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            var x = document.getElementById("vCheckBox").checked;
            if (x) $('#id_checkbox').val(1);
        });
        function checkCheckBox() {
            var x = document.getElementById("vCheckBox").checked;
            if (x) $('#id_checkbox').val(1);
            else $('#id_checkbox').val(0);
        }
    </script>
}

